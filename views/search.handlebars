<link
	href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
	rel="stylesheet"
/>
<h1 class="my-4">Search Results</h1>
<div id="clientError" class="error" hidden>Error Message</div>
<div class="container">
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
		{{#each searchResults}}
			<div>
				<div class="card h-100">
					<a class="href-black" href="/sellers/listings/{{_id}}">
						<img src="{{itemImage}}" class="card-img-top" alt="{{itemName}}" />
						<div class="card-body">
							<h5>{{itemName}}</h5>
							<p>{{itemDescription}}</p>
							<p class="fw-bold">${{itemPrice}}</p>
							<p> {{itemCategory}}</p>
							<p> {{condition}}</p>
						</div>
					</a>
					<div class="card-footer bg-white border-top-0">
						<form
							id="addToCart"
							name="addToCart"
							action="/customers/cart"
							method="POST"
						>
							<label
								for="{{itemId}}Quantity"
								class="form-label"
							>Quantity</label>
							<input
								type="number"
								id="{{itemId}}Quantity"
								name="quantity"
								min="1"
								max="5"
								value="1"
							/>
							<input type="hidden" name="listingId" value="{{_id}}" />
							<button type="submit" class="btn btn-primary w-100">Add to Cart</button>
						</form>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
</div>