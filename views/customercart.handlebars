<h1>Cart</h1>
<div id="clientError" class="error" hidden>Error Message</div>
{{#if cart}}
  <div class="cart-items">
    {{#each cart}}
      <div class="cart-item" data-listingId="{{listingId}}">
        <div class="item-image">
          <img src="{{listing.itemImage}}" alt="{{listing.itemName}}" />
        </div>
        <div class="flex-grow">
          <h2>{{listing.itemName}}</h2>
          <p>{{listing.itemDescription}}</p>
          <p>Condition: {{listing.condition}}
          <p class="price">Price: ${{listing.itemPrice}}</p>

          <div>
            <label for="quantity-{{listingId}}">Qty:</label>
            <input
              type="number"
              id="quantity-{{listingId}}"
              class="quantity-input"
              value="{{quantity}}"
              min="1"
              max="5"
            />
          </div>

          <p class="total">Total: ${{multiply listing.itemPrice quantity}}</p>
        </div>

        <button class="deleteCartItemBtn">
            Remove
        </button>
      </div>
    {{/each}}

    <div class="cart-summary">
      <h2>Cart Summary</h2>
      <p>Total Items: <span>{{totalItems}}</span></p>
      <p>Total Price: $<span>{{totalPrice}}</span></p>
      <a href="/customers/checkout">
      <button id="checkout-button">Proceed to Checkout</button>
      <a/>
    </div>
  </div>
{{else}}
  <h2>Your Cart is Empty.</h2>
{{/if}}