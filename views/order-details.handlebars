<div>
	<h1>{{pageTitle}}</h1>

	<section>
		<h2>Order Summary</h2>
		<p>Order ID: {{order._id}}</p>
		<p>Order Date: {{order.orderDate}}</p>
		<p>Total Cost: ${{order.cost}}</p>
	</section>

	<section>
		<h3>Customer Details</h3>
		<p>Full Name: {{order.name}}</p>
		<p>Shipping Address: {{order.shippingAddress}}</p>
	</section>

	<section>
		<h3>Items Ordered</h3>
		{{#if order.orderItems}}
			{{#each order.orderItems}}
				<div class="cart-item" data-item-id="{{_id}}">
					<a href="/sellers/listings/{{listing._id}}" class="href-black">
						<div class="item-image">
							<img src="{{listing.itemImage}}" alt="{{listing.itemName}}" />
						</div>
					</a>

					<div class="item-details">
						<h2>{{listing.itemName}}</h2>
						<p>{{listing.itemDescription}}</p>
						<p>Condition: {{listing.condition}}</p>
						<p class="price">Price: ${{listing.itemPrice}}</p>
						<p>Quantity: {{quantity}}</p>

						<p class="total">Total: ${{multiply listing.itemPrice quantity}}</p>
					</div>
				</div>
			{{/each}}
		{{else}}
			<p>No items found for this order.</p>
		{{/if}}
	</section>

	<section class="order-actions">
		<a href="/customers/orders" class="btn-back">Back to Orders</a>
	</section>
</div>

<script src="/public/js/users/order_details.js"></script>